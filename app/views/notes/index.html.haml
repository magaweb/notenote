
.wrapper_with_padding
    #notes.clearfix

        = form_tag(notes_path, :method => "get", id: "search-form") do
            = text_field_tag :search, params[:search], placeholder: "Busca"
            = submit_tag "Buscar"


        - unless @notes.blank?
            - @notes.each do |note|
                %a{ href: (url_for [note])}
                    .note
                        %p.title= note.title
                        %p.date= time_ago_in_words(note.created_at)
        - else
            %h2 Add a Note
            %p It appears you haven't created any notes yet... Lets fix that. Why don't you go ahead and create a new note.
            %button= link_to "New Note", new_note_path